---
import Card from "./ui/Card.astro";

import projectImgWFM from "../assets/projectsImgs/projectFileManager.png";
import projectImgDF from "../assets/projectsImgs/projectDosisFe.png";
import projectImgMed from "../assets/projectsImgs/projectMedico.png";
import projectImgAI from "../assets/projectsImgs/projectAILearning.png";
import projectImgClustering from "../assets/projectsImgs/projectImgClustering.png";

import ts from "../assets/IconSvg/ts.svg";
import python from "../assets/IconBadges/python.svg";
import jupyter from "../assets/IconBadges/jupyter.svg";
import postgres from "../assets/IconSvg/postgres.svg";
import node from "../assets/IconBadges/node.svg";
import shadcn from "../assets/IconBadges/shadcn.svg";
import react from "../assets/IconBadges/react.svg";
import nest from "../assets/IconBadges/nest.svg";
import passport from "../assets/IconBadges/passport.png";
import qt from "../assets/IconBadges/qt.svg";
import scikitLearn from "../assets/IconBadges/scikitLearn.svg";
import nextjs from "../assets/IconSvg/nextjs.svg";
import fastapi from "../assets/IconSvg/fastapi.svg";
import langchain from "../assets/IconBadges/langchain.jpg";

import expo from "../assets/IconSvg/expo.svg";
import prisma from "../assets/IconSvg/prisma.svg";
import docker from "../assets/IconSvg/docker.svg";
---

<section
   id="projects"
   class="relative py-12 sm:py-16 lg:py-20 px-4 sm:px-6 lg:px-8"
   aria-labelledby="projects-heading"
>
   <div
      class="absolute inset-0 -z-10 bg-gradient-to-b from-white via-gray-50 to-white dark:from-gray-950 dark:via-gray-900 dark:to-gray-950"
   >
   </div>
   <div class="max-w-7xl mx-auto">
      <div class="text-center mb-12 sm:mb-16 lg:mb-20">
         <h2
            id="projects-heading"
            class="text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-900 dark:text-white"
         >
            Featured Projects
         </h2>
         <p
            class="mt-3 sm:mt-4 text-sm sm:text-base lg:text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto"
         >
            A selection of projects that showcase my skills and passion.
         </p>
      </div>

      <div
         class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8"
      >
         <Card
            label="AI-Powered Learning Assistant"
            text="Intelligent educational platform powered by Google's Gemini AI with local Gemini Nano processing. Features PDF summarization, exercise generation, flashcards, learning roadmaps, and educational games."
            ghlink="https://github.com/RodrigoAlexander7/Google-Built-in-AI-Challenge-2025"
            demoLink="https://google-built-in-ai-challenge-2025.vercel.app/"
            image={projectImgAI}
            badges={[
               { src: ts, name: "TypeScript" },
               { src: nextjs, name: "Next.js" },
               { src: react, name: "React" },
               { src: python, name: "Python" },
               { src: fastapi, name: "FastAPI" },
            ]}
         />

         <Card
            label="Scientific Article Clustering Platform"
            text="End-to-end ML pipeline for clustering and semantic search of scientific literature using SciBERT, HDBSCAN, and Whoosh. Features contextual embeddings, automatic labeling, semantic search, and FastAPI backend."
            ghlink="https://github.com/RodrigoAlexander7/nasa-space-apps-challenge-2025"
            demoLink="https://celestia-graph.vercel.app/"
            image={projectImgClustering}
            badges={[
               { src: python, name: "Python" },
               { src: fastapi, name: "FastAPI" },
               { src: jupyter, name: "Jupyter" },
            ]}
         />

         <Card
            label="Mobile App for Anemia Monitoring (WIP)"
            text="DosisFe is a mobile application developed with React Native and Expo (EAS) that seeks to improve the diagnosis and monitoring of anemia by adjusting hemoglobin for height."
            ghlink="https://github.com/RodrigoAlexander7/H-Calculator"
            image={projectImgDF}
            demoLink="https://github.com/RodrigoAlexander7/dosis-fe/releases/tag/v2.0.0"
            badges={[
               { src: nest, name: "NestJS" },
               { src: ts, name: "TypeScript" },
               { src: react, name: "React Native" },
               { src: passport, name: "Passport" },
               { src: expo, name: "Expo" },
               { src: docker, name: "Docker" },
               { src: langchain, name: "LangChain" },
            ]}
         />

         <Card
            label="Medical Records Management System"
            text="A full-stack web application designed to manage clinical records for a university healthcare system. This project streamlines the administration of patient data, vital signs, and medical histories, offering a modern and responsive interface for healthcare professionals."
            ghlink="https://github.com/RodrigoAlexander7/Sistema_Integrado_de_Salud_UNSA"
            image={projectImgMed}
            badges={[
               { src: ts, name: "TypeScript" },
               { src: postgres, name: "PostgreSQL" },
               { src: prisma, name: "Prisma" },
               { src: shadcn, name: "shadcn/ui" },
               { src: node, name: "Node.js" },
               { src: react, name: "React" },
            ]}
         />

         <Card
            label="Automated File Manager (AI Powered)"
            text="Intelligent system with graphical interface for automatic file organization and clustering of academic documents using TF-IDF and K-means algorithms."
            ghlink="https://github.com/RodrigoAlexander7/Automated_File_Manager"
            image={projectImgWFM}
            badges={[
               { src: python, name: "Python" },
               { src: qt, name: "Qt" },
               { src: scikitLearn, name: "Scikit-Learn" },
            ]}
         />
      </div>
   </div>
</section>
