---
import Card from "./ui/Card.astro";

import projectImgWFM from "../assets/projectsImgs/projectFileManager.png";
import projectImgDF from "../assets/projectsImgs/projectDosisFe.png";
import projectImgMed from "../assets/projectsImgs/projectMedico.png";

import ts from "../assets/IconSvg/ts.svg";
import python from "../assets/IconBadges/python.svg";
import postgres from "../assets/IconBadges/postgres.svg";
import node from "../assets/IconBadges/node.svg";
import prisma from "../assets/IconBadges/prisma.svg";
import shadcn from "../assets/IconBadges/shadcn.svg";
import react from "../assets/IconBadges/react.svg";
import expo from "../assets/IconBadges/expo.svg";
import qt from "../assets/IconBadges/qt.svg";
import scikitLearn from "../assets/IconBadges/scikitLearn.svg";
---

<section
   id="projects"
   class="relative py-16 sm:py-20 lg:py-28 px-4 sm:px-6 lg:px-8"
>
   <div
      class="absolute inset-0 -z-10 bg-gradient-to-b from-white via-gray-50 to-white dark:from-gray-950 dark:via-gray-900 dark:to-gray-950"
   >
   </div>
   <div class="max-w-7xl mx-auto">
      <div class="text-center mb-12 sm:mb-16 lg:mb-20">
         <h2
            class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 dark:text-white"
         >
            Featured Projects
         </h2>
         <p
            class="mt-3 sm:mt-4 text-base sm:text-lg lg:text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto"
         >
            A selection of projects that showcase my skills and passion.
         </p>
      </div>

      <div class="space-y-12 sm:space-y-16 lg:space-y-20">
         <Card
            label="Automated File Manager (AI Powered)"
            text="Intelligent system with graphical interface for automatic file organization and clustering of academic documents using TF-IDF and K-means algorithms."
            ghlink="https://github.com/RodrigoAlexander7/Automated_File_Manager"
            image={projectImgWFM}
            badges={[python, qt, scikitLearn]}
         />

         <Card
            label="Medical Records Management System"
            text="A full-stack web application designed to manage clinical records for a university healthcare system. This project streamlines the administration of patient data, vital signs, and medical histories, offering a modern and responsive interface for healthcare professionals."
            ghlink="https://github.com/RodrigoAlexander7/Sistema_Integrado_de_Salud_UNSA"
            image={projectImgMed}
            badges={[ts, postgres, prisma, shadcn, node, react]}
            reverse={true}
         />

         <Card
            label="Mobile App for Anemia Monitoring (WIP)"
            text="DosisFe is a mobile application developed with React Native and Expo (EAS) that seeks to improve the diagnosis and monitoring of anemia by adjusting hemoglobin for height."
            ghlink="https://github.com/RodrigoAlexander7/H-Calculator"
            image={projectImgDF}
            badges={[ts, react, expo]}
         />
      </div>
   </div>
</section>
