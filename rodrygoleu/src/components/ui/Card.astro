---
const {label, text, ghlink, image, badges} = Astro.props
import githublogo from '../../assets/github.svg'
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';
---

<div class="flex flex-col lg:flex-row items-center justify-center w-3/4 lg:w-5/8 sm:p-6 my-7 bg-white  sm:border-gray-200 rounded-lg sm:shadow-sm lg:gap-2.5">
   <Image src={image} alt="ProjectImg" class="rounded-xl w-full lg:w-1/2 h-auto md:m-3.5" />
   <div>
      <a href={ghlink} target="_blank">
         <h5 class="my-4 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
            {label}
         </h5>
      </a>
      <div class="flex flex-wrap gap-x-3 mb-2.5">
         {badges.map((badge:ImageMetadata)=>(
            <img src={badge.src} class="mb-3 flex size-9 hover:scale-120 transition">
         ))}
      </div>
      <p class="mb-7 font-normal text-gray-700 dark:text-gray-400">{text}</p>
      <a href={ghlink} target="_blank" class="group inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-black rounded-lg hover:bg-white hover:border-1 hover:text-black transition focus:ring-4 focus:outline-none">
         <img src={githublogo.src} class="mr-1.5 size-3.5 invert-100 group-hover:invert-0"/>
         GitHub
      </a>
   </div>
</div>
